<psy:PsyGui
    xmlns="https://spacestation14.io"
    xmlns:psy="clr-namespace:Content.Client._Stalker.StalkerUi.Widgets"
    Name="PsyInterface"
    VerticalExpand="True"
    HorizontalAlignment="Left"
    Orientation="Vertical"
>
    <BoxContainer Name="PsyContent" Orientation="Vertical">
        <Label Margin="8 0 0 0" Text="Psy" VAlign="Center" />

        <BoxContainer Orientation="Horizontal">
            <TextureRect
                Name="PsyTexture"
                Margin="0,0,4,0"
                MinSize="32 32"
                Stretch="KeepAspectCentered" />
