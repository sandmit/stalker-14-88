<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'radio-menu-title'}"
                      MinSize="110 150"
                      SetSize="110 150">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" HorizontalAlignment="Center" VerticalExpand="True">
            <Label Text="{Loc 'radio-channel-label'}"  HorizontalAlignment="Center"/>
            <LineEdit Name="ChannelInput" MinWidth="100" HorizontalExpand="True"/>
        </BoxContainer>
        <BoxContainer Orientation="Vertical" HorizontalAlignment="Center" HorizontalExpand="True" Margin="0 2 0 0" VerticalExpand="True">
            <Button Name="MicButton" ToggleMode="True" Text="{Loc 'radio-button-text-mic'}" MinWidth="70" HorizontalExpand="True"/>
            <Button Name="SpeakerButton" ToggleMode="True" Text="{Loc 'radio-button-text-speaker'}" MinWidth="70" HorizontalExpand="True"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
