<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="{Loc 'repository-slider-title'}"
    MinSize="256 128">
    <BoxContainer
        HorizontalExpand="True"
        Orientation="Vertical"
        VerticalExpand="True">
        <SliderIntInput Name="CountSlider" HorizontalExpand="True" Value="1"/>
        <Control MinSize="0 8"/>
        <Button
            Name="ConfirmButton"
            Text="{Loc 'repository-slider-button'}"
            HorizontalExpand="True"
            HorizontalAlignment="Center"/>
    </BoxContainer>
</DefaultWindow>
